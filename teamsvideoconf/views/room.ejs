<!DOCTYPE html>
<html lang="en">

<head>
    <!-- meta tags -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Title bar settings -->
    <title>MS Teams Clone</title>
    <link rel="shortcut icon" type="images/svg" href="/img/logo.svg" />  <!-- favicon -->
    <!-- Pass roomId from server.js -->
    <script>
        const ROOM_ID = "<%= roomId %>"
    </script>
    <!-- Peerjs library -->
    <script defer src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js"></script>
    <!-- Bootstrap 4 CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
        integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <!-- Bootstrap 4 JavaScript -->
    <!-- jQuery first, then Popper.js -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
        integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
        integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
        crossorigin="anonymous"></script>
    <!-- Socket.io for front-end -->
    <script src="/socket.io/socket.io.js" defer></script>
    <!-- Awesome fonts library -->
    <script src="https://kit.fontawesome.com/c939d0e917.js"></script>
    <!-- Custom CSS -->
    <link rel="stylesheet" href="style.css">
    <!-- Custom script -->
    <script src="script.js" defer></script>
</head>

<body>
    <!-- Main starts here -->
    <div class="main">
        <!-- Left column starts here: contains Controls & Video-grid -->
        <div class="main__left">
            <!-- Controls start here-->
            <div class="main__controls">
                <div class="main__controls__block">
                    <!-- Participants button -->
                    <div class="main__controls__button">
                        <img src="/img/Participants.svg">
                    </div>
                    <!-- Chat button -->
                    <div class="main__controls__button">
                        <img src="/img/Chat.svg">
                    </div>
                    <!-- Invite button -->
                    <div class="main__controls__button" id="invite-button">
                        <img src="/img/Invite.svg">
                    </div>
                    <!-- Separator(line) -->
                    <div>
                        <img src="/img/Line.svg" width="0.6px" />
                    </div>
                    <!-- Video controls button -->
                    <div onclick="playStop()" class="main__controls__button main__video_button">
                        <i class="fas fa-video"></i>
                    </div>
                    <!-- Microphone controls button -->
                    <div onclick="muteUnmute()" class="main__controls__button main__mute_button">
                        <i class="fas fa-microphone"></i>
                    </div>
                    <!-- Leave button -->
                    <div class="main__controls__button" id="leave-button">
                        <span class="leave_meeting"><img src="/img/Leave.svg" width="30px">Leave</span>
                    </div>
                </div>
            </div>
            <!-- Controls end here -->
            <!-- Video-grid starts here -->
            <div class="main__videos">
                <div id="video-grid">

                </div>
            </div>
            <!-- Video-grid ends here -->
        </div>
        <!-- Left column ends here -->
        <!-- Right column starts here: contains Chat section -->
        <div class="main__right">
            <!-- Chat Section starts here-->
            <!-- Header -->
            <div class="main__header">
                <h6>Chat</h6>
            </div>
            <!-- Messages -->
            <div class="main__chat_window">
                 <!-- Single messages -->
                <ul class="messages">

                </ul>
            </div>
            <!-- Input holder -->
            <div class="main__message_container">
                <input id="chat_message" type="text" placeholder="Type message here...">
            </div>
            <!-- Chat section ends here -->
        </div>
        <!-- Right column ends here -->
    </div>
    <!-- Main ends here -->
</body>

</html>